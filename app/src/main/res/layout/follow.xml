<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:background="#FFFFFF"
    android:gravity="center"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_marginTop="20sp"
        android:layout_gravity="center"
        android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/rate_us"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_marginTop="20sp"
        android:layout_gravity="center"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="150sp"
        android:layout_margin="10sp"
        android:layout_gravity="center"
        android:translationZ="1sp"
        android:gravity="center"
        android:background="@drawable/bg_circle"
        android:layout_height="150sp">

        <TextView
            android:layout_width="wrap_content"
            android:textSize="18sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textAllCaps="true"
            android:text="Rate Us for update"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_height="wrap_content"/>

    </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/share"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_below="@+id/rate_us"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="150sp"
        android:layout_margin="10sp"
        android:layout_gravity="center"
        android:translationZ="1sp"
        android:gravity="center"
        android:background="@drawable/bg_circle"
        android:layout_height="150sp">

        <TextView
            android:layout_width="wrap_content"
            android:textSize="18sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Share with friends"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:textColor="#FFFFFF"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/tex"
        android:layout_width="match_parent"
        android:layout_below="@+id/share"
        android:gravity="center"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:text="Follow Us :"
            android:layout_gravity="center"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            android:layout_margin="10sp"
            android:gravity="center"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/follow"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_below="@+id/tex"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/fb"
            android:layout_width="wrap_content"
            app:cardCornerRadius="6dp"
            android:layout_margin="10sp"
            android:translationZ="1sp"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:background="@drawable/ic_facebook"
                android:layout_margin="10sp"
                android:layout_height="wrap_content" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/utube"
            android:layout_width="wrap_content"
            app:cardCornerRadius="6dp"
            android:layout_margin="10sp"
            android:translationZ="1sp"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="30sp"
                android:background="@drawable/ic_youtube"
                android:layout_margin="10sp"
                android:layout_height="30sp" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/twit"
            android:layout_width="wrap_content"
            app:cardCornerRadius="6dp"
            android:layout_margin="10sp"
            android:translationZ="1sp"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="30sp"
                android:background="@drawable/ic_twitter"
                android:layout_margin="10sp"
                android:layout_height="30sp" />

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:gravity="bottom"
        android:layout_below="@+id/follow"
        android:layout_marginBottom="20sp"
       android:layout_alignParentBottom="true"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textStyle="normal"
            android:layout_margin="10sp"
            android:textSize="14sp"
            android:text="AVN POST,\n
            220 Makhija house\n
Old HB Road, Near Kokar Bazar, Kokar, Ranchi, Jharkhand 834001\n
Mb. No:- +91-9431730004, +91-9334499518\n"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

    </RelativeLayout>

</androidx.core.widget.NestedScrollView>