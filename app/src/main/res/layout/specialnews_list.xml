<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_margin="10sp"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/special_id"
                android:layout_width="wrap_content"
                android:visibility="gone"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/special_author"
                android:layout_width="wrap_content"
                android:visibility="gone"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/special_title"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:gravity="left"
                android:layout_margin="10sp"
                android:textSize="12sp"
                android:text="पुणे। हरियाण स्टीलर्स टीम आज प्रो कबड्डी लीग (पीकेएल) के सातवें सीजन के अपने "
                android:lines="2"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_weight="1"
                    android:id="@+id/special_author_name"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="10sp"
                    android:layout_marginRight="10sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_margin="6sp"
                        android:background="@drawable/ic_calendar"
                        android:layout_height="10sp"
                        android:layout_width="10sp" />

                    <TextView
                        android:id="@+id/special_date"
                        android:layout_width="wrap_content"
                        android:textSize="10sp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textColor="@android:color/black"
                        android:layout_height="wrap_content"/>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_weight="2"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/special_image"
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_margin="10sp"
                android:fitsSystemWindows="true"
                android:scaleType="fitXY"
                android:background="@drawable/select_button"
                android:layout_height="80sp"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>